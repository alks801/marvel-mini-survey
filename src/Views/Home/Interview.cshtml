
<div class="interview-container hidden">
    <div class="status-container w">
        <div class="current-status" v-bind:class="['q' + currentQuestion.id]">
            <div class="progress">
                {{currentQuestion.id}}/{{data.questions.length}}
            </div>
        </div>
    </div>
    <div class="question-container w">
        <div class="question-title bold-text w">
            {{currentQuestion.text}}
        </div>
        <div class="answer-container">
            <div class="answer-element" v-for="answer in currentQuestion.answers">
                <div class="answer-item p" v-on:click="selectAnswer(answer)">
                    <div class="check">
                        <i class="fa fa-circle-thin" aria-hidden="true" v-bind:class="{'undisp': answer.checked}"></i>
                        <i class="fa fa-dot-circle-o" aria-hidden="true" v-bind:class="{'undisp': !answer.checked}"></i>
                    </div>
                    <div class="answer-text">{{answer.text}}</div>
                </div>
                <div class="answer-stat" v-bind:class="{'hidden' : !currentQuestion.checked}">
                    <div class="stat-progress" v-bind:style="{width: getAnswerProgressWidth(answer.id)}"></div>
                    <div class="stat-percent">{{currentQuestion.checked ? stats[answer.id] : 0}}%</div>
                </div>
            </div>
        </div>
        <div class="answer-button-container w">
            <div class="answer-button p" v-bind:class="{disabled: !currentQuestion.checked}" v-on:click="nextQuestion()">
                Next question
            </div>
        </div>
    </div>
    <div class="total-container"><span class="oranged-text">Base:</span> {{statTotalInterviewCount()}} <span class="oranged-text">interview{{getTotalCountInterviewsEnding()}}.</span></div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.4/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="~/js/Page.js" asp-append-version="true"></script>
}